<%- include("navbar.ejs") %>
    <style type="text/css">
        .chart-container {
            height: 300px;
        }
    </style>

    <!-- Dashboard Content -->
    <div class="dashboard-content">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">Dashboard Overview</h1>
            <p class="page-subtitle">Welcome back, Dr. Johnson. Here's what's happening at your IVF center today.</p>
        </div>



        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card patients fade-in-up">
                <div class="stat-content">
                    <div class="stat-info">
                        <h3>
                            <%= appointments[0].total_appointments %>
                        </h3>
                        <div class="stat-title">Total Patients</div>
                        <div class="stat-trend positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>
                                <%= new Date().toLocaleString('default', { month: 'long' }) %>
                            </span>
                        </div>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-user-injured"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card appointments fade-in-up delay-1">
                <div class="stat-content">
                    <div class="stat-info">
                        <h3>
                            <%= todays_appointments[0].todays_appointments %>
                        </h3>
                        <div class="stat-title">Today's Appointments</div>
                        <div class="stat-trend positive">
                            <i class="fas fa-clock"></i>
                            <span>
                                <%= pending_appointments[0].pending_appointments %> pending
                            </span>
                        </div>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card success-rate fade-in-up delay-2">
                <div class="stat-content">
                    <div class="stat-info">
                        <h3>
                            <%= patient_reviews[0].patients_review %>
                        </h3>
                        <div class="stat-title">Patient Review</div>
                        <div class="stat-trend positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>4.5% of Patients</span>
                        </div>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card enquiries fade-in-up delay-3">
                <div class="stat-content">
                    <div class="stat-info">
                        <h3>
                            <%= enquiry[0].enquiry %>
                        </h3>
                        <div class="stat-title">New Enquiries</div>
                        <div class="stat-trend negative">
                            <i class="fas fa-exclamation-circle"></i>
                            <span>8 require follow-up</span>
                        </div>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-headset"></i>
                    </div>
                </div>
            </div>
        </div>


        <!-- Quick Actions -->
        <div class="quick-actions">
            <a href="/admin/doctors" class="action-btn">
                <i class="fas fa-user-md"></i>
                <span class="action-label">Add Doctors</span>
            </a>
            <a href="/admin/appointment" class="action-btn">
                <i class="fas fa-user-plus"></i>
                <span class="action-label">Add Appointment</span>
            </a>
            <a href="/admin/patient-review" class="action-btn">
                <i class="fas fa-file-medical"></i>
                <span class="action-label">Add Patient Review</span>
            </a>

        </div>

        <!-- Charts Section -->
        <div class="charts-grid">

            <!-- LINE CHART : Daily Appointments -->
            <div class="chart-card">
                <div class="chart-header">
                    <h5 class="chart-title">
                        <i class="fas fa-calendar-alt"></i>
                        Daily Appointments
                    </h5>

                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button"
                            data-bs-toggle="dropdown" id="monthDropdownBtn">
                            Select Month
                        </button>
                        <ul class="dropdown-menu" id="monthDropdownMenu">
                            <li><a class="dropdown-item" data-month="0">January</a></li>
                            <li><a class="dropdown-item" data-month="1">February</a></li>
                            <li><a class="dropdown-item" data-month="2">March</a></li>
                            <li><a class="dropdown-item" data-month="3">April</a></li>
                            <li><a class="dropdown-item" data-month="4">May</a></li>
                            <li><a class="dropdown-item" data-month="5">June</a></li>
                            <li><a class="dropdown-item" data-month="6">July</a></li>
                            <li><a class="dropdown-item" data-month="7">August</a></li>
                            <li><a class="dropdown-item" data-month="8">September</a></li>
                            <li><a class="dropdown-item" data-month="9">October</a></li>
                            <li><a class="dropdown-item" data-month="10">November</a></li>
                            <li><a class="dropdown-item" data-month="11">December</a></li>
                        </ul>
                    </div>
                </div>

                <div class="chart-container">
                    <canvas id="appointmentsChart"></canvas>
                </div>
            </div>

            <!-- DOUGHNUT CHART : Doctor Distribution -->
            <div class="chart-card">
                <div class="chart-header">
                    <h5 class="chart-title">
                        <i class="fas fa-user-md"></i>
                        Doctor Appointments Distribution
                    </h5>
                </div>

                <div class="treatment-distribution-container">
                    <div class="chart-container">
                        <canvas id="doctorAppointmentChart"></canvas>
                    </div>
                    <div class="treatment-legend" id="doctorAppointmentLegend"></div>
                </div>
            </div>

        </div>



    </div>
    </div>

<!-- 1️⃣ Backend data -->
<script>
  const dailyAppointments = <%- JSON.stringify(dailyAppointments || []) %>;
  const doctorAppointments = <%- JSON.stringify(doctorAppointments || []) %>;
</script>

<!-- 2️⃣ Chart.js library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- 3️⃣ Dashboard charts logic -->
<script>
  let appointmentsChart;
  let doctorAppointmentChart;

  const colors = [
    '#0d6efd',
    '#1e88e5',
    '#1565c0',
    '#42a5f5',
    '#90caf9',
    '#64b5f6'
  ];

  function initAppointmentsChart() {
    const ctx = document.getElementById('appointmentsChart');
    if (!ctx || !dailyAppointments.length) return;

    appointmentsChart = new Chart(ctx, {
      type: 'line',
      data: {
        labels: dailyAppointments.map(d => d.day),
        datasets: [{
          label: 'Appointments',
          data: dailyAppointments.map(d => d.total),
          borderColor: '#0d6efd',
          backgroundColor: 'rgba(13,110,253,0.08)',
          fill: true,
          tension: 0.4
        }]
      }
    });
  }

  function initDoctorAppointmentChart() {
    const ctx = document.getElementById('doctorAppointmentChart');
    if (!ctx || !doctorAppointments.length) return;

    doctorAppointmentChart = new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: doctorAppointments.map(d => d.doctor_name),
        datasets: [{
          data: doctorAppointments.map(d => d.total),
          backgroundColor: colors
        }]
      },
      options: {
        cutout: '60%',
        plugins: { legend: { display: false } }
      }
    });

    renderDoctorLegend();
  }

  function renderDoctorLegend() {
    const legend = document.getElementById('doctorAppointmentLegend');
    if (!legend) return;

    legend.innerHTML = '';

    doctorAppointments.forEach((doc, i) => {
      legend.innerHTML += `
        <div class="legend-item">
          <span class="legend-color" style="background:${colors[i % colors.length]}"></span>
          ${doc.doctor_name} (${doc.total})
        </div>`;
    });
  }

  document.addEventListener('DOMContentLoaded', () => {
    initAppointmentsChart();
    initDoctorAppointmentChart();
  });
</script>


