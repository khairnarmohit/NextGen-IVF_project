<%- include("navbar.ejs") %>
    <style type="css/text">
        .chart-container {
    height: 300px;
}

</style>

    <!-- Dashboard Content -->
    <div class="dashboard-content">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">Dashboard Overview</h1>
            <p class="page-subtitle">Welcome back, Dr. Johnson. Here's what's happening at your IVF center today.</p>
        </div>



        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card patients fade-in-up">
                <div class="stat-content">
                    <div class="stat-info">
                        <h3>1,248</h3>
                        <div class="stat-title">Total Patients</div>
                        <div class="stat-trend positive">
                            <i class="fas fa-arrow-up"></i>
                            <span>January</span>
                        </div>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-user-injured"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card appointments fade-in-up delay-1">
                <div class="stat-content">
                    <div class="stat-info">
                        <h3>18</h3>
                        <div class="stat-title">Today's Appointments</div>
                        <div class="stat-trend positive">
                            <i class="fas fa-clock"></i>
                            <span>3 pending</span>
                        </div>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card success-rate fade-in-up delay-2">
                <div class="stat-content">
                    <div class="stat-info">
                        <h3>1000</h3>
                        <div class="stat-title">Patient Review</div>
                        <div class="stat-trend positive">
                            <!-- <i class="fas fa-arrow-up"></i> -->
                            <span>4.5% of Patients</span>
                        </div>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                </div>
            </div>

            <div class="stat-card enquiries fade-in-up delay-3">
                <div class="stat-content">
                    <div class="stat-info">
                        <h3>24</h3>
                        <div class="stat-title">New Enquiries</div>
                        <div class="stat-trend negative">
                            <i class="fas fa-exclamation-circle"></i>
                            <span>8 require follow-up</span>
                        </div>
                    </div>
                    <div class="stat-icon">
                        <i class="fas fa-headset"></i>
                    </div>
                </div>
            </div>
        </div>


        <!-- Quick Actions -->
        <div class="quick-actions">
            <a href="/admin/doctors" class="action-btn">
                <i class="fas fa-user-md"></i>
                <span class="action-label">Add Doctors</span>
            </a>
            <a href="/admin/appointments-list" class="action-btn">
                <i class="fas fa-user-plus"></i>
                <span class="action-label">Add Appointment</span>
            </a>
            <a href="/admin/patient-review" class="action-btn">
                <i class="fas fa-file-medical"></i>
                <span class="action-label">Add Patient Review</span>
            </a>

        </div>

        <!-- Charts Section -->
        <div class="charts-grid">

            <div class="chart-card">
                <div class="chart-header">
                    <h5 class="chart-title">
                        <i class="fas fa-calendar-alt"></i>
                        Daily Appointments
                    </h5>

                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button"
                            data-bs-toggle="dropdown" id="monthDropdownBtn">
                            Select Month
                        </button>
                        <ul class="dropdown-menu" id="monthDropdownMenu">
                            <li><a class="dropdown-item" href="#" data-month="0">January</a></li>
                            <li><a class="dropdown-item" href="#" data-month="1">February</a></li>
                            <li><a class="dropdown-item" href="#" data-month="2">March</a></li>
                            <li><a class="dropdown-item" href="#" data-month="3">April</a></li>
                            <li><a class="dropdown-item" href="#" data-month="4">May</a></li>
                            <li><a class="dropdown-item" href="#" data-month="5">June</a></li>
                            <li><a class="dropdown-item" href="#" data-month="6">July</a></li>
                            <li><a class="dropdown-item" href="#" data-month="7">August</a></li>
                            <li><a class="dropdown-item" href="#" data-month="8">September</a></li>
                            <li><a class="dropdown-item" href="#" data-month="9">October</a></li>
                            <li><a class="dropdown-item" href="#" data-month="10">November</a></li>
                            <li><a class="dropdown-item" href="#" data-month="11">December</a></li>
                        </ul>
                    </div>
                </div>

                <div class="chart-container">
                    <canvas id="appointmentsChart"></canvas>
                </div>
            </div>

            



            <div class="chart-card">
                <div class="chart-header">
                    <h5 class="chart-title">
                        <i class="fas fa-user-md"></i>
                        Doctor Appointments Distribution
                    </h5>
                </div>
                <div class="treatment-distribution-container">
                    <div class="chart-container treatment-chart-wrapper">
                        <canvas id="doctorAppointmentChart"></canvas>
                    </div>
                    <div class="treatment-legend" id="doctorAppointmentLegend">
                        <!-- Legend will be generated by JavaScript -->
                    </div>
                </div>
            </div>

        </div>


    </div>
    </div>



    <%- include("footer.ejs") %>