<%- include('navbar.ejs') %>

<div class="container py-4">

  <div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0">Edit Review</h5>
    </div>
    <div class="card-body">
      <form
        action="/admin/patient-review/update"
        method="POST"
        enctype="multipart/form-data"
      >
        
        <input type="hidden" name="patients_review_id" value="<%= editData.patients_review_id %>">
        <input type="hidden" name="old_photo" value="<%= editData.patients_review_photo %>">

        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Patient Name</label>
                <input
                    type="text"
                    class="form-control"
                    name="patients_review_name"
                    value="<%= editData.patients_review_name %>"
                    required
                >
            </div>
            <div class="col-md-6">
                <label class="form-label">Location</label>
                <input
                    type="text"
                    class="form-control"
                    name="patients_review_address"
                    value="<%= editData.patients_review_address %>"
                    required
                >
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4">
                <label class="form-label">Date</label>
                <input
                    type="date"
                    class="form-control"
                    name="patients_review_date"
                    value="<%= editData.patients_review_date %>"
                    required
                >
            </div>
            <div class="col-md-4">
                <label class="form-label">Change Photo</label>
                <input
                    type="file"
                    class="form-control"
                    name="patients_review_photo"
                    accept="image/*"
                >
            </div>
            <div class="col-md-4 d-flex align-items-center">
                 <div class="text-center w-100">
                    <label class="small text-muted">Current Photo</label><br>
                    <img 
                        src="/uploads/<%= editData.patients_review_photo %>" 
                        class=" border mb-2" 
                        width="100" 
                        style="object-fit: cover;"
                    >
                 </div>
            </div>
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <textarea 
                class="form-control" 
                name="patients_review_desc" 
                rows="5" 
                required
            ><%= editData.patients_review_desc %></textarea>
        </div>

        <div class="mt-4 text-end">
            <a href="/admin/patient-review" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-success">Update Review</button>
        </div>
      </form>
    </div>
  </div>

</div>

<%- include('footer.ejs') %>