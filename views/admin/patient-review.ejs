<%- include('navbar.ejs') %>

<div class="container py-4">

  <!-- Top Toolbar Row: Add Review (Left) & Actions (Right) -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <% if(!editData) { %>
        <button
          class="btn btn-primary"
          data-bs-toggle="collapse"
          data-bs-target="#addReviewForm"
        >
          <i class="fas fa-plus me-1"></i> Add Review
        </button>
      <% } %>
    </div>

    <!-- Top Right Side Buttons -->
    <div>
      <button onclick="exportReviewCSV()" class="btn btn-success me-2">
        <i class="fas fa-file-csv me-2"></i> Export CSV
      </button>
      <button onclick="printReviews()" class="btn btn-secondary">
        <i class="fas fa-print me-2"></i> Print
      </button>
    </div>
  </div>

  <!-- Add Form Section (Cleaned up - No duplicates) -->
  <div class="collapse <%= editData ? 'd-none' : '' %> mb-4" id="addReviewForm">
    <div class="card shadow-sm border-0">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Add New Patient Review</h5>
      </div>
      <div class="card-body">
        <form action="/admin/patient-review/save" method="POST" enctype="multipart/form-data">
          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Patient Photo</label>
              <input type="file" name="patients_review_photo" class="form-control" accept="image/*" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Review Date</label>
              <input type="date" name="patients_review_date" class="form-control" required>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Patient Name</label>
              <input type="text" name="patients_review_name" class="form-control" placeholder="Enter Patient Name" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Location</label>
              <input type="text" name="patients_review_address" class="form-control" placeholder="e.g. Pune, Mumbai" required>
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label">Review Description</label>
            <textarea name="patients_review_desc" class="form-control" rows="4" placeholder="Write patient feedback here..." required></textarea>
          </div>

          <div class="text-end">
            <button type="submit" class="btn btn-success px-4">
              <i class="fas fa-save me-1"></i> Save Review
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Edit Form Section -->
  <% if(editData) { %>
    <div class="card shadow-sm border-0 mb-4">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Edit Review</h5>
      </div>
      <div class="card-body">
        <form action="/admin/patient-review/update" method="POST" enctype="multipart/form-data">
          <input type="hidden" name="patients_review_id" value="<%= editData.patients_review_id %>">
          <input type="hidden" name="old_photo" value="<%= editData.patients_review_photo %>">

          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">Patient Name</label>
              <input type="text" name="patients_review_name" class="form-control" value="<%= editData.patients_review_name %>" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Location</label>
              <input type="text" name="patients_review_address" class="form-control" value="<%= editData.patients_review_address %>" required>
            </div>
          </div>

          <div class="row mb-3">
            <div class="col-md-4">
              <label class="form-label">Date</label>
              <input type="date" name="patients_review_date" class="form-control" value="<%= editData.patients_review_date %>" required>
            </div>
            <div class="col-md-4">
              <label class="form-label">Change Photo (Optional)</label>
              <input type="file" name="patients_review_photo" class="form-control" accept="image/*">
            </div>
            <div class="col-md-4 d-flex align-items-center">
              <div class="text-center w-100">
                <label class="small text-muted">Current Photo</label><br>
                <img src="/uploads/<%= editData.patients_review_photo %>" class="rounded border" width="60" height="60" style="object-fit:cover;">
              </div>
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label">Review Description</label>
            <textarea name="patients_review_desc" class="form-control" rows="4" required><%= editData.patients_review_desc %></textarea>
          </div>

          <div class="text-end">
            <a href="/admin/patient-review" class="btn btn-secondary me-2">Cancel</a>
            <button type="submit" class="btn btn-primary px-4">
              <i class="fas fa-sync-alt me-1"></i> Update Review
            </button>
          </div>
        </form>
      </div>
    </div>
  <% } %>

  <!-- List Section (ID for Print/Export) - Cleaned Structure -->
  <div id="printArea" class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0">Patient Reviews List</h5>
    </div>

    <div class="card-body table-responsive">
      <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
          <tr>
            <th>#</th>
            <th style="width: 100px;" class="text-center">Photo</th>
            <th class="text-center">Name</th>
            <th class="text-center">Location</th>
            <th class="text-center" style="min-width: 300px;">Review Description</th>
            <th class="text-center">Date</th>
            <th style="width: 120px;" class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <% if (list.length > 0) { %>
            <% for (let i = 0; i < list.length; i++) { %>
              <tr>
                <td class="text-center"><%= i + 1 %></td>
                <td class="text-center">
                  <img src="/uploads/<%= list[i].patients_review_photo %>" 
                       class="img-fluid rounded border" 
                       width="50" height="50" 
                       style="object-fit: cover;" 
                       onerror="this.src='https://via.placeholder.com/50'">
                </td>
                <td class="fw-bold text-primary"><%= list[i].patients_review_name %></td>
                <td><span class="text-dark"><%= list[i].patients_review_address %></span></td>
                <td class="text-start">
                  <p class="text-muted mb-0" style="padding-left: 15px;"><%= list[i].patients_review_desc %></p>
                </td>
                <td class="text-center">
                  <span class="review-date text-secondary small" data-date="<%= list[i].patients_review_date %>"></span>
                </td>
                <td class="text-center">
                  <a href="/admin/patient-review?edit=<%= list[i].patients_review_id %>" class="btn btn-sm btn-warning" title="Edit">
                    <i class="fas fa-edit"></i>
                  </a>
                  <a href="/admin/patient-review/delete/<%= list[i].patients_review_id %>" class="btn btn-sm btn-danger mt-1" title="Delete" onclick="return confirm('Are you sure you want to delete this review?')">
                    <i class="fas fa-trash"></i>
                  </a>
                </td>
              </tr>
            <% } %>
          <% } else { %>
            <tr>
              <td colspan="7" class="text-center text-muted py-4">
                No reviews found. Click "Add Review" to create one.
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

</div> <!-- End Container -->

<script>
  // Date Formatting Script
  document.querySelectorAll(".review-date").forEach(el => {
    const rawDate = el.dataset.date;
    if (!rawDate) return;

    const date = new Date(rawDate);
    const formatted = date.toLocaleDateString("en-US", {
      year: 'numeric',
      month: 'short',
      day: 'numeric'
    });
    el.textContent = formatted;
  });

  // Export CSV Script
  function exportReviewCSV() {
    let csv = [];
    // Select rows specifically from the main table
    let rows = document.querySelectorAll("#printArea table tr");

    for (let i = 0; i < rows.length; i++) {
      let row = [], cols = rows[i].querySelectorAll("th, td");

      for (let j = 0; j < cols.length; j++) {
        // Note: This skips column index 3 (Location) as per your original code
        if (j === 3) continue; 

        let text = cols[j].innerText.replace(/"/g, '""');
        row.push('"' + text + '"');
      }
      csv.push(row.join(","));
    }

    let csvFile = new Blob([csv.join("\n")], { type: "text/csv" });
    let downloadLink = document.createElement("a");

    downloadLink.download = "patient_reviews.csv";
    downloadLink.href = window.URL.createObjectURL(csvFile);
    downloadLink.style.display = "none";

    document.body.appendChild(downloadLink);
    downloadLink.click();
    document.body.removeChild(downloadLink);
  }

  // Print Script
  function printReviews() {
    const printContent = document.getElementById("printArea").innerHTML;
    const originalContent = document.body.innerHTML;

    document.body.innerHTML = printContent;
    window.print();
    
    // Reload to restore the original DOM state (simple fix for this approach)
    document.body.innerHTML = originalContent; 
    location.reload();
  }
</script>

<%- include('footer.ejs') %>