<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Verify OTP</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

  <style>
    body {
      min-height: 100vh;
      background: linear-gradient(135deg, #e3f2fd, #f8fbff);
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    }

    .otp-card {
      background: rgba(255,255,255,0.85);
      backdrop-filter: blur(10px);
      padding: 32px 28px;
      border-radius: 18px;
      width: 100%;
      max-width: 420px;
      text-align: center;
      box-shadow: 0 20px 40px rgba(13,110,253,0.12);
      border: 1px solid rgba(255,255,255,0.6);
      animation: fadeUp 0.5s ease;
    }

    @keyframes fadeUp {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .otp-title {
      font-weight: 700;
      letter-spacing: 0.2px;
    }

    .otp-subtitle {
      font-size: 0.95rem;
      color: #6c757d;
    }

    .otp-input {
      width: 52px;
      height: 56px;
      border-radius: 12px;
      text-align: center;
      font-size: 20px;
      font-weight: 700;
      border: 1px solid #dee2e6;
      background: #fff;
      transition: all 0.2s ease;
    }

    .otp-input:focus {
      border-color: #0d6efd;
      box-shadow: 0 0 0 4px rgba(13,110,253,0.15);
      transform: translateY(-2px);
    }

    .otp-input.filled {
      border-color: #0d6efd;
      background: #f0f6ff;
    }

    .timer-text {
      font-size: 0.9rem;
    }

    .btn-verify {
      font-weight: 600;
      border-radius: 10px;
      padding: 10px;
      transition: all 0.2s ease;
    }

    .btn-verify:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }

    .btn-verify:hover {
      transform: translateY(-1px);
      box-shadow: 0 8px 16px rgba(13,110,253,0.25);
    }

    .resend-link {
      font-size: 0.85rem;
      text-decoration: none;
    }

    .resend-link:hover {
      text-decoration: underline;
    }

    @media (max-width: 400px) {
      .otp-input {
        width: 46px;
        height: 52px;
        font-size: 18px;
      }
    }
  </style>
</head>
<body>

<div class="otp-card">
  <h5 class="otp-title mb-2">OTP Verification</h5>
  <p class="otp-subtitle mb-4">Enter the 6-digit code sent to your email</p>

  <form action="/admin/verify-otp" method="POST" id="otpForm">

    <% if (typeof message !== 'undefined' && message) { %>
  <div class="alert alert-danger alert-dismissible fade show mb-3 otp-error" role="alert">
    <i class="fas fa-exclamation-circle me-2"></i>
    <%= message %>
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  </div>
<% } %>


    <div class="d-flex justify-content-between gap-2 mb-3">
      <input class="form-control otp-input" maxlength="1" inputmode="numeric" autocomplete="one-time-code">
      <input class="form-control otp-input" maxlength="1" inputmode="numeric">
      <input class="form-control otp-input" maxlength="1" inputmode="numeric">
      <input class="form-control otp-input" maxlength="1" inputmode="numeric">
      <input class="form-control otp-input" maxlength="1" inputmode="numeric">
      <input class="form-control otp-input" maxlength="1" inputmode="numeric">
    </div>

    <input type="hidden" name="otp" id="fullOtp">

    <div class="mb-3 timer-text">
      <small>
        Expires in <span id="timer" class="text-danger fw-bold">05:00</span>
      </small>
    </div>

    <button class="btn btn-primary w-100 btn-verify" id="verifyBtn" disabled>
      Verify OTP
    </button>
  </form>

  <div class="mt-3">
    <a href="/admin/forgot-password" class="resend-link text-primary">
      Didnâ€™t receive code? Resend OTP
    </a>
  </div>
</div>

<script>
  const inputs = document.querySelectorAll('.otp-input');
  const timerEl = document.getElementById('timer');
  const fullOtp = document.getElementById('fullOtp');
  const verifyBtn = document.getElementById('verifyBtn');

  // Auto focus + numbers only + styling
  inputs.forEach((input, i) => {
    input.addEventListener('input', () => {
      input.value = input.value.replace(/[^0-9]/g, '');

      if (input.value) {
        input.classList.add('filled');
        if (i < inputs.length - 1) inputs[i + 1].focus();
      } else {
        input.classList.remove('filled');
      }

      checkOtpComplete();
    });

    // Backspace navigation
    input.addEventListener('keydown', (e) => {
      if (e.key === "Backspace" && !input.value && i > 0) {
        inputs[i - 1].focus();
      }
    });

    // Paste full OTP support
    input.addEventListener('paste', (e) => {
      const paste = (e.clipboardData || window.clipboardData).getData('text');
      if (/^\d{6}$/.test(paste)) {
        paste.split('').forEach((num, idx) => {
          if (inputs[idx]) {
            inputs[idx].value = num;
            inputs[idx].classList.add('filled');
          }
        });
        inputs[5].focus();
        checkOtpComplete();
        e.preventDefault();
      }
    });
  });

  function checkOtpComplete() {
    const otp = [...inputs].map(i => i.value).join('');
    verifyBtn.disabled = otp.length !== 6;
  }

  // Combine OTP before submit
  document.getElementById('otpForm').addEventListener('submit', () => {
    fullOtp.value = [...inputs].map(i => i.value).join('');
  });

  // Timer (5 min)
  let timeLeft = 300;
  const interval = setInterval(() => {
    let m = Math.floor(timeLeft / 60);
    let s = timeLeft % 60;

    timerEl.textContent =
      `${String(m).padStart(2,'0')}:${String(s).padStart(2,'0')}`;

    if (timeLeft <= 0) {
      clearInterval(interval);
      timerEl.textContent = "Expired";
      verifyBtn.disabled = true;
    }

    timeLeft--;
  }, 1000);
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>
