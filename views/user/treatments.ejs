<%- include("navbar.ejs") %>

<link rel="stylesheet" href="/css/treatment.css">


 <section class="hero-section bg-body-secondary py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-start text-center">
                <h1 class="p-5 fw-bold">Treatments</h1> 

                <!-- Breadcrumb -->
              <h4 class="breadcrumb-title mb-4">
                    Home <span class="mx-2">â€º</span>
                    <a class="text-decoration-none">Treatments</a>
                </h4>
            </div>
        </div>
    </div>
</section> 


<section>
  <div class="container">
    <div class="row mt-5 mb-5">

      <% treatments.forEach(t => { %>

        <div class="col-md-4 mb-4">
          <div class="card card-body treatment-card p-5 border-1">
          <!-- style="--bg-image: url('/uploads/<%= t.treatment_image %>');" -->


            <!-- ICON (HTML from DB) -->
             <span class="treatment-icon fs-1 mb-3">
            <%- t.treatment_icon %>
            </span>

            <h3><%= t.treatment_title %></h3>

            <p class="pt-3 pb-3">
              <%= t.treatment_short %>
            </p>

            <a href="/treatment-details/<%= t.treatment_id %>" class="fs-4 treatment-link">
              <i class="fa-solid fa-arrow-right"></i>
            </a>

          </div>
        </div>

      <% }) %>

    </div>
  </div>
</section>


<section class="cta-section bg-body-secondary text-dark py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-10 text-center ">

        <h2 class="fw-bold mb-3">
          Book Your Appointment Today!
        </h2>

        <p class="mb-4 fs-5">
          Take the first step towards better care with our expert team.
        </p>

        <a href="/appointment" class="btn btn-primary fw-bold px-4">
          Book Appointment
        </a>

      </div>
    </div>
  </div>
</section>



