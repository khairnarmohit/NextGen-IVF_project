/* Treaments Cards Css */

.treatment-card {
    position: relative;
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.4s ease;
    cursor: pointer;
    z-index: 1;
}

/* Background image */
.treatment-card::before {
    content: "";
    position: absolute;
    inset: 0;
    background: url("treatment-1.jpg") center / cover no-repeat;
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: -2;
}
/* Primary color overlay */
.treatment-card::after {
    content: "";
    position: absolute;
    inset: 0;
    background: rgba(13, 110, 253, 0.85); /* Bootstrap primary */
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: -1;
}

/* Hover state */
.treatment-card:hover::before,
.treatment-card:hover::after {
    opacity: 1;
}

/* Text & icon color change */
.treatment-card h3,
.treatment-card p,
.treatment-card i {
    transition: color 0.3s ease;
}

.treatment-card:hover h3,
.treatment-card:hover p,
.treatment-card:hover i {
    color: #fff;
}

/* Arrow move */
.treatment-link i {
    transition: transform 0.3s ease;
}

.treatment-card:hover .treatment-link i {
    transform: translateX(8px);
}


