<style type="text/css">
        /* Custom CSS for IVF Clinic Privacy Policy Page */
/* =========================
   PRIVACY POLICY PAGE ONLY
   All classes prefixed with pp-
========================= */

.pp-hero-section {
    background: linear-gradient(135deg, #e0f7fa 0%, #b2ebf2 100%);
    padding: 100px 0 60px;
    margin-bottom: 40px;
}

.pp-hero-section h1 {
    color: #1d8c9a;
    margin-bottom: 15px;
}

.pp-hero-section .lead {
    font-size: 1.25rem;
    color: #555;
    max-width: 700px;
    margin: 0 auto 20px;
}

/* Main Content */
.pp-main-content {
    background-color: #f8f9fa;
}

/* Policy Card */
.pp-policy-card {
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.pp-policy-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08) !important;
}

/* Section Titles */
.pp-section-title {
    color: #1d8c9a;
    padding-bottom: 8px;
    border-bottom: 2px solid rgba(43, 176, 192, 0.2);
    margin-bottom: 20px;
}

/* Contact Info Box */
.pp-contact-info {
    background-color: rgba(43, 176, 192, 0.05);
    border-radius: 8px;
    padding: 20px;
}

/* CTA Section */
.pp-cta-section {
    background-color: #e8f4f8;
}

.pp-cta-section h3 {
    color: #1d8c9a;
}

/* Responsive */
@media (max-width: 768px) {
    .pp-hero-section {
        padding: 70px 0 40px;
    }

    .pp-hero-section h1 {
        font-size: 2.2rem;
    }

    .pp-policy-card .card-body {
        padding: 25px !important;
    }
}

/* Print Only for Privacy Page */
@media print {
    .pp-cta-section,
    .btn {
        display: none !important;
    }

    .pp-hero-section {
        background: white !important;
        padding: 30px 0;
    }

    .pp-policy-card {
        box-shadow: none !important;
        border: 1px solid #ddd !important;
    }

    .pp-section-title {
        color: black !important;
        border-bottom: 1px solid #ccc !important;
    }
}

    </style>

   
    <!-- Hero / Page Title Section -->
