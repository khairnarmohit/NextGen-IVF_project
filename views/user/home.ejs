<%- include("navbar.ejs") %>

    <link rel="stylesheet" href="hero_banner.css">

    <link rel="stylesheet" href="/css/home.css">

    <section class="video-hero-container">

        <video class="video-background" preload="auto" autoplay muted loop playsinline
            poster="/uploads/baby_crawl_image.jpeg">
            <source src="/uploads/<%= hero_info.hero_background || 'baby_crawl_video.mp4' %>" type="video/mp4">
        </video>

        <div class="overlay"></div>


     
     </video>
       <div class="overlay"></div>

        <div class="container h-100 content-wrapper">
            <div class="row h-100 align-items-center">

                <div class="col-12 col-lg-7 text-start">
                    <h1 class="display-3 fw-bold animate-up delay-0 slider_text">
                        <%= hero_info.hero_heading || "Helping you build the family of your dreams!" %>
                    </h1>
                    <a href="/appointment"
                        class="btn btn-primary btn-lg rounded-pill px-5 py-3 animate-up delay-1 shadow">
                        Book an Appointment
                    </a>
                </div>

            </div>
        </div>
</section>

   
    <section class="section-padding" id="history">
        <div class="container">
            <!-- <h1 class="About_text text-primary">About Us</h1> -->
            <div class="row align-items-center">

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="history-content pe-lg-4">
                        <span class="section-subtitle">Our About</span>
                        <h2 class="section-title mb-4">
                            <%= about[0].about_title || "NextGen IVF Center" %>
                        </h2>

                        <p class="text-secondary mb-4">
                            <%- about[0].about_desc
                                || "NextGen IVF started as a small clinic with a big dream: to make the joy of parenthood accessible to everyone. Over the years, we have grown into a state-of-the-art fertility center, pioneering advanced reproductive technologies and maintaining one of the highest success rates in the region."
                                %>
                        </p>

                        <a href="" class="btn btn-primary ">Read More</a>

                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="img-frame">
                        <img src="/uploads/<%= about[0].about_image || 'about_image.jpg' %>" alt="NextGen IVF History"
                            class="img-fluid about_image">
                    </div>
                </div>
            </div>
        </div>
    </section>




    <!-- tretments -->
    <section>
        <div class="container">
            <div class="text-center mb-5">
            <h2 class="text-center mb-5 fw-bold text-primary" style="font-family: 'Poppins', sans-serif;">
                    Treatments
            </h2>
        </div>
            <div class="row mt-5 mb-5">

                <% treatments.forEach(t=> { %>

                    <div class="col-md-4 mb-4">
                        <div class="card card-body treatment-card p-5 border-1">
                            <!-- style="--bg-image: url('/uploads/<%= t.treatment_image %>');" -->


                            <!-- ICON (HTML from DB) -->
                            <span class="treatment-icon fs-1 mb-3">
                                <%- t.treatment_icon %>
                            </span>

                            <h3>
                                <%= t.treatment_title %>
                            </h3>

                            <p class="pt-3 pb-3">
                                <%= t.treatment_short %>
                            </p>

                            <a href="/treatment-details/<%= t.treatment_id %>" class="fs-4 treatment-link">
                                <i class="fa-solid fa-arrow-right"></i>
                            </a>

                        </div>
                    </div>

                    <% }) %>

            </div>

        </div>
    </section>




    <!-- doctor -->
    <section class="container py-5" id="core-doctors">
        <div class="text-center mb-5">
                <h2 class="text-center mb-5 fw-bold text-primary" style="font-family: 'Poppins', sans-serif;">
                    Meet Our Team
                </h2>
        </div>

        <div class="row g-4">

            <% if (doctors.length> 0) { %>
                <% doctors.forEach(doctor=> { %>

                    <div class="col-lg-4 col-md-6">
                        <div class="doctor-card h-100">
                            <img src="/uploads/<%= doctor.doctor_photo %>" class="doctor-img"
                                alt="<%= doctor.doctor_name %>">

                            <div class="doctor-info">
                                <h3 class="doctor-name">
                                    <%= doctor.doctor_name %>
                                </h3>

                                <p class="doctor-degree">
                                    <%= doctor.doctor_qual %>
                                </p>

                                <span class="doctor-specialization">
                                    <%= doctor.doctor_specialist %>
                                </span>

                                <div class="doctor-experience">
                                    <i class="fa-solid fa-award"></i>
                                    <span>
                                        <%= doctor.doctor_exp %>+ Years Experience
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <% }) %>
                        <% } else { %>
                            <p class="text-center">No doctors available</p>
                            <% } %>

        </div>
    </section>



    <!-- why choose us -->
    <section class="section-padding bg-light-alt" id="why-choose-us">
        <div class="container">
            <div class="text-center mb-5">
                <!-- <span class="section-subtitle ">Why Choose Us</span> -->

                <h2 class="text-center mb-5 fw-bold text-primary" style="font-family: 'Poppins', sans-serif;">
                    Why Choose Us
                </h2>
            </div>

            <div class="row g-4">

                <% for(var i=0; i<whychooseus.length; i++) { %>
                    <div class="col-md-6 col-lg-3">
                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="<%= whychooseus[i].whychooseus_icon %>"></i>
                            </div>
                            <h4>
                                <%= whychooseus[i].whychooseus_name %>
                            </h4>
                            <p class="text-secondary small mb-0">
                                <%= whychooseus[i].whychooseus_desc %>
                            </p>
                        </div>
                    </div>
                    <% } %>

            </div>
        </div>
    </section>



    <!-- patient-stories -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5 fw-bold text-primary" style="font-family: 'Poppins', sans-serif;">
                Patients Reviews
            </h2>

            <div class="row g-4">

                <% for(var i=0; i<patients_review.length; i++) { %>

                    <div class="col-lg-4 col-md-6">
                        <div class="testimonial-card h-100">
                            <div class="quote-icon">
                                <i class="fas fa-quote-right"></i>
                            </div>

                            <p class="testimonial-text">
                                <%= patients_review[i].patients_review_desc %>
                            </p>

                            <div class="d-flex align-items-center mt-4">
                                <img src="/uploads/<%= patients_review[i].patients_review_photo %>" class="profile-img"
                                    alt="<%= patients_review[i].patients_review_name %>">
                                <div class="ms-3">
                                    <h6 class="mb-0 fw-bold text-primary">
                                        <%= patients_review[i].patients_review_name %>
                                    </h6>
                                    <small class="text-muted">
                                        <%= patients_review[i].patients_review_address %> â€¢
                                            <%= new
                                                Date(patients_review[i].patients_review_date).toLocaleDateString( 'en-US'
                                                , { year: 'numeric' , month: 'long' , day: 'numeric' } ) %>
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>

            </div>
        </div>
    </section>















