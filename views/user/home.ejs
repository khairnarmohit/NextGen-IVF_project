<%- include("navbar.ejs") %>

<link rel="stylesheet" href="hero_banner.css">

<link rel="stylesheet" href="/css/home.css">

<section class="video-hero-container">
   
    <video 
      class="video-background" 
      preload="auto" 
      autoplay 
      muted 
      loop 
      playsinline 
      poster="/uploads/baby_crawl_image.jpeg"
    >
        <source src="/uploads/<%= hero_info.hero_background || 'baby_crawl_video.mp4' %>" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <div class="overlay"></div>

    <div class="container h-100 content-wrapper">
        <div class="row h-100 align-items-center">
            
            <div class="col-12 col-lg-7 text-start">
                <h1 class="display-3 fw-bold animate-up delay-0 slider_text">
                    <%= hero_info.hero_heading || "Helping you build the family of your dreams!" %>
                </h1>
                <a href="/appointment" class="btn btn-primary btn-lg rounded-pill px-5 py-3 animate-up delay-1 shadow">
                    Book an Appointment
                </a>
            </div>
            
        </div>
    </div>
</section>


<section class="section-padding" id="history">
    <div class="container">
        <!-- <h1 class="About_text text-primary">About Us</h1> -->
        <div class="row align-items-center">
            
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="history-content pe-lg-4">
                    <span class="section-subtitle">Our About</span>
                    <h2 class="section-title mb-4">NextGen IVF Center</h2>
                   
                    <p class="text-secondary mb-4">
                        NextGen IVF started as a small clinic with a big dream: to make the joy of parenthood accessible to everyone. Over the years, we have grown into a state-of-the-art fertility center, pioneering advanced reproductive technologies and maintaining one of the highest success rates in the region.
                    </p>
                    <p class="text-secondary">
                        From our humble beginnings to becoming a trusted name in IVF, our commitment to compassionate care and ethical practices has remained unchanged. We have had the privilege of witnessing thousands of success stories, each one adding to our rich history of excellence.
                    </p>

               <a href="" class="btn btn-primary ">Read More</a>

                </div>
            </div>
            <div class="col-lg-6">
                <div class="img-frame">
                    <img src="https://images.unsplash.com/photo-1516549655169-df83a0774514?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" alt="NextGen IVF History" class="img-fluid about_image">
                </div>
            </div>
        </div>
    </div>
</section>




<!-- tretments -->
<section>
    <div class="container">
        <div class="row mt-5 mb-5">

      <% treatments.forEach(t => { %>

        <div class="col-md-4 mb-4">
          <div class="card card-body treatment-card p-5 border-1">
          <!-- style="--bg-image: url('/uploads/<%= t.treatment_image %>');" -->


            <!-- ICON (HTML from DB) -->
             <span class="treatment-icon fs-1 mb-3">
            <%- t.treatment_icon %>
            </span>

            <h3><%= t.treatment_title %></h3>

            <p class="pt-3 pb-3">
              <%= t.treatment_short %>
            </p>

            <a href="/treatment-details/<%= t.treatment_id %>" class="fs-4 treatment-link">
              <i class="fa-solid fa-arrow-right"></i>
            </a>

          </div>
        </div>

      <% }) %>

    </div>
    
    </div>
</section>




<!-- doctor -->
<section class="container py-5" id="core-doctors">
    <div class="section-header">
      <h2>Meet Our Team</h2>
      <p>
        A dedicated team of fertility experts delivering advanced reproductive care
        with compassion, precision, and technology.
      </p>
    </div>

<div class="row g-4">

    <% if (doctors.length > 0) { %>
      <% doctors.forEach(doctor => { %>

        <div class="col-lg-4 col-md-6">
          <div class="doctor-card h-100">
            <img 
              src="/uploads/<%= doctor.doctor_photo %>" 
              class="doctor-img" 
              alt="<%= doctor.doctor_name %>">

            <div class="doctor-info">
              <h3 class="doctor-name"><%= doctor.doctor_name %></h3>

              <p class="doctor-degree"><%= doctor.doctor_qual %></p>

              <span class="doctor-specialization">
                <%= doctor.doctor_specialist %>
              </span>

              <div class="doctor-experience">
                <i class="fa-solid fa-award"></i>
                <span><%= doctor.doctor_exp %>+ Years Experience</span>
              </div>
            </div>
          </div>
        </div>

      <% }) %>
    <% } else { %>
      <p class="text-center">No doctors available</p>
    <% } %>

  </div>
  </section>



