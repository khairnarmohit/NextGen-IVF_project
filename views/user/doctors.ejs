<header class="page-header text-center bg-body-secondary py-5 mb-5">
  <div class="container">
    <h1 class="display-4 fw-bold text-dark mb-3 p-5">Our Doctors</h1>

    <nav aria-label="breadcrumb">
      <ol class="breadcrumb justify-content-center">
        <li class="breadcrumb-item">
          <a href="/">Home</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
          Doctors
        </li>
      </ol>
    </nav>
  </div>
</header>


<section class="container py-5" id="core-doctors">
  <div class="section-header text-center mb-5">
    <h2>Our IVF Specialists</h2>
    <p>
      A dedicated team of fertility experts delivering advanced reproductive care
      with compassion, precision, and technology.
    </p>
  </div>

  <div class="row g-4">

    <% if (doctors.length > 0) { %>
      <% doctors.forEach(doctor => { %>

        <div class="col-lg-4 col-md-6">
          <div class="doctor-card h-100">
            <img 
              src="/uploads/<%= doctor.doctor_photo %>" 
              class="doctor-img" 
              loading="lazy"
              decoding="async"
              alt="<%= doctor.doctor_name %>">

            <div class="doctor-info">
              <h3 class="doctor-name"><%= doctor.doctor_name %></h3>

              <p class="doctor-degree"><%= doctor.doctor_qual %></p>

              <span class="doctor-specialization">
                <%= doctor.doctor_specialist %>
              </span>

              <div class="doctor-experience">
                <i class="fa-solid fa-award"></i>
                <span><%= doctor.doctor_exp %>+ Years Experience</span>
              </div>
            </div>
          </div>
        </div>

      <% }) %>
    <% } else { %>
      <p class="text-center">No doctors available</p>
    <% } %>

  </div>
</section>


<section class="visiting-doctor-section">
  <div class="container">

    <div class="visiting-doctor-header">
      <h2>Visiting Doctors</h2>
      <p>
        Renowned fertility specialists visiting our
        center on scheduled days to provide expert consultation and care.
      </p>
    </div>

    <div class="row g-4 justify-content-center">

      <% if (visitingDoctors && visitingDoctors.length > 0) { %>
        <% for (let i = 0; i < visitingDoctors.length; i++) { %>

          <div class="col-lg-4 col-md-6">
            <div class="visiting-doctor-card">

              <img
                src="/uploads/<%= visitingDoctors[i].visitor_doctor_photo %>"
                class="visiting-doctor-img"
                loading="lazy"
                decoding="async"
                
                alt="<%= visitingDoctors[i].visitor_doctor_name %>">

              <div class="visiting-doctor-info">
                <h3 class="visiting-doctor-name">
                  <%= visitingDoctors[i].visitor_doctor_name  %>
                </h3>

                <p class="visiting-doctor-degree">
                  <%= visitingDoctors[i].visitor_doctor_qual %>
                </p>

                <div class="visiting-schedule-box">

                  <div class="visiting-schedule-item">
                    <div class="visiting-schedule-left">
                      <i class="fa-solid fa-calendar-days"></i>
                      <span>Date</span>
                    </div>
                    <div class="visiting-schedule-right">
                      <%= visitingDoctors[i].visitor_doctor_date %>
                    </div>
                  </div>

                  <div class="visiting-schedule-item">
                    <div class="visiting-schedule-left">
                      <i class="fa-solid fa-clock"></i>
                      <span>Time</span>
                    </div>
                    <div class="visiting-schedule-right">
                      <%= visitingDoctors[i].visitor_doctor_time %>
                    </div>
                  </div>

                </div>
              </div>

            </div>
          </div>

        <% } %>
      <% } else { %>
        <p class="text-center">No visiting doctors available</p>
      <% } %>

    </div>
  </div>
</section>


