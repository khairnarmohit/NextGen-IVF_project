  <style>
    /* Internal CSS for Contact Page */
    :root {
      --primary: #1e88e5;
      --primary-dark: #1565c0;
      --secondary: #e3f2fd;
      --background: #ffffff;
      --text: #263238;
      --text-light: #546e7a;
      --accent: #43a047;
      --light-gray: #f8f9fa;
      --border-radius: 16px;
    }

    body {
        font-family: 'Roboto', sans-serif;
        color: var(--text);
        overflow-x: hidden;
    }

    h1, h2, h3, h4, h5, h6 {
        font-family: 'Poppins', sans-serif;
        font-weight: 700;
    }

    /* Contact Page Styles */
    .contact-hero {
      background: linear-gradient(135deg, var(--secondary) 0%, #ffffff 100%);
      color: var(--text);
      padding: 80px 0 60px;
      margin-bottom: 60px;
      position: relative;
      overflow: hidden;
    }

    .contact-hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
      opacity: 0.4;
    }

    .contact-hero h1 {
      font-family: 'Poppins', sans-serif;
      font-weight: 700;
      font-size: 3rem;
      margin-bottom: 1rem;
      position: relative;
      z-index: 1;
    }

    .contact-hero p {
      font-size: 1.2rem;
      opacity: 0.95;
      position: relative;
      z-index: 1;
    }


    /* Contact Form */
    .contact-form-section {
      background: white;
      border-radius: 20px;
      padding: 40px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .contact-form-section h2 {
      font-family: 'Poppins', sans-serif;
      font-weight: 700;
      color: var(--text);
      margin-bottom: 10px;
    }

    .contact-form-section .subtitle {
      color: var(--text-light);
      margin-bottom: 30px;
    }

    .form-label {
      font-weight: 600;
      color: var(--text);
      margin-bottom: 8px;
      font-family: 'Poppins', sans-serif;
    }

    .form-control,
    .form-select {
      border: 2px solid #e0e0e0;
      border-radius: 10px;
      padding: 12px 16px;
      transition: all 0.3s ease;
      font-size: 0.95rem;
    }

    .form-control:focus,
    .form-select:focus {
      border-color: var(--primary);
      box-shadow: 0 0 0 4px rgba(30, 136, 229, 0.1);
    }

    textarea.form-control {
      min-height: 120px;
      resize: vertical;
    }

    .btn-submit {
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
      color: white;
      border: none;
      border-radius: 10px;
      padding: 14px 40px;
      font-weight: 600;
      font-family: 'Poppins', sans-serif;
      font-size: 1rem;
      transition: all 0.3s ease;
      box-shadow: 0 4px 12px rgba(30, 136, 229, 0.3);
    }

    .btn-submit:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(30, 136, 229, 0.4);
      background: linear-gradient(135deg, #1565c0 0%, #0d47a1 100%);
    }

    /* Info Section */
    .info-section {
      background: var(--light-gray);
      padding: 60px 0;
    }

    .info-card {
      background: white;
      border-radius: 16px;
      padding: 30px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
      margin-bottom: 20px;
    }

    .info-card h5 {
      font-family: 'Poppins', sans-serif;
      font-weight: 600;
      color: var(--text);
      margin-bottom: 15px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .info-card h5 i {
      color: var(--primary);
      font-size: 1.3rem;
    }

    .info-card ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .info-card ul li {
      padding: 8px 0;
      color: var(--text-light);
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .info-card ul li i {
      color: var(--accent);
      font-size: 0.9rem;
    }

    /* Map Section */
    .map-section {
      background: white;
      border-radius: 20px;
      overflow: hidden;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      margin-bottom: 60px;
    }

    .map-section iframe {
      width: 100%;
      height: 450px;
      border: none;
    }

    /* Emergency Banner */
    .emergency-banner {
      background: linear-gradient(135deg, var(--accent) 0%, #2e7d32 100%);
      color: white;
      padding: 25px;
      border-radius: 16px;
      margin-bottom: 30px;
      box-shadow: 0 4px 15px rgba(67, 160, 71, 0.3);
    }

    .emergency-banner h5 {
      font-family: 'Poppins', sans-serif;
      font-weight: 600;
      margin-bottom: 10px;
      display: flex;
      align-items: center;
      gap: 10px;
    }

    .emergency-banner a {
      color: white;
      font-weight: 600;
      font-size: 1.3rem;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }

    .emergency-banner a:hover {
      opacity: 0.9;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .contact-hero h1 {
        font-size: 2rem;
      }

      .contact-hero p {
        font-size: 1rem;
      }

      .contact-form-section {
        padding: 30px 20px;
      }

      .map-section iframe {
        height: 300px;
      }
    }

    .info-card {
      border-radius: 28px;
      padding: 35px 30px;
      font-family: 'Poppins', sans-serif;
    }

    /* Card Colors */
    .light-card {
      background: var(--secondary);
      color: var(--primary);
    }

    .pink-card {
      background: var(--secondary);
      color: var(--primary);
    }

    .navy-card {
      background: var(--secondary);
      color: var(--primary);
    }



    /* Icon Circle */
    .icon-circle {
      width: 48px;
      height: 48px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 18px;
    }

    /* Icon Styles */
    .light-icon {
      border: 2px solid var(--primary);
      color: var(--primary);
    }

    .white-icon {
      border: 2px solid var(--primary);
      color: var(--primary);
    }

    /* Typography */
    .info-card h5,
    .info-card h6 {
      letter-spacing: 0.3px;
      color: var(--text);
    }

    .info-card span {
      font-size: 15px;
    }
