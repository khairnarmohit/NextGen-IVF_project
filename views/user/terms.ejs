    .terms-page-wrapper .page-subtitle {
      font-size: 1.25rem;
      color: #666;
      max-width: 600px;
      margin: 0 auto;
    }

    /* Breadcrumb */
    .terms-page-wrapper .breadcrumb {
      background-color: transparent;
      justify-content: center;
      margin-top: 30px;
    }

    .terms-page-wrapper .breadcrumb-item a {
      color: var(--primary-color);
      text-decoration: none;
    }

    .terms-page-wrapper .breadcrumb-item.active {
      color: #6c757d;
    }

    .terms-page-wrapper .breadcrumb-item+.breadcrumb-item::before {
      color: #6c757d;
