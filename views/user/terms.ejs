<%- include("navbar.ejs") %>

<style type="text/css">
 .hero-section .breadcrumb a,
.hero-section .breadcrumb .breadcrumb-item.active {
  color: #000;
  text-decoration: none;
}

.hero-section .breadcrumb a:hover {
  color: #000;
}


    /* Main Content */
    .pp-main-content {
        background-color: #f8f9fa;
    }

    /* Policy Card */
    .pp-policy-card {
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .pp-policy-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08) !important;
    }

    /* Section Titles */
    .pp-section-title {
        color: #1d8c9a;
        padding-bottom: 8px;
        border-bottom: 2px solid rgba(43, 176, 192, 0.2);
        margin-bottom: 20px;
    }

    /* CTA Section */
    .pp-cta-section {
        background-color: #e8f4f8;
    }

    .pp-cta-section h3 {
        color: #1d8c9a;
    }

    /* Responsive */
    @media (max-width: 768px) {
        .pp-hero-section {
            padding: 70px 0 40px;
        }

        .pp-hero-section h1 {
            font-size: 2.2rem;
        }

        .pp-policy-card .card-body {
            padding: 25px !important;
        }
    }

    /* Print Only for Terms Page */
    @media print {
        .pp-cta-section,
        .btn {
            display: none !important;
        }

        .pp-hero-section {
            background: white !important;
            padding: 30px 0;
        }

        .pp-policy-card {
            box-shadow: none !important;
            border: 1px solid #ddd !important;
        }

        .pp-section-title {
            color: black !important;
            border-bottom: 1px solid #ccc !important;
        }
    }
</style>

<!-- Hero / Page Title Section -->
<section class="hero-section">
  <div class="container">
    <div class="row">
      <div class="col-12 text-center">
        <h1 class="hero-title">Terms & Conditions</h1>

        <nav aria-label="breadcrumb">
          <ol class="breadcrumb justify-content-center">
            <li class="breadcrumb-item">
              <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
              Terms & Conditions
            </li>
          </ol>
        </nav>
      </div>
    </div>
  </div>
</section>


<main class="pp-main-content py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="pp-policy-card card shadow-sm border-0">
                    <div class="card-body p-4 p-md-5">
                        
                        <% if (list.length > 0) { %>
                            <% for (let i = 0; i < list.length; i++) { %>
                                <section class="mb-5">
                                    <h2 class="h3 mb-3 pp-section-title"><%= i + 1 %>. <%= list[i].term_title %></h2>
                                    
                                    <p style="white-space: pre-wrap;"><%= list[i].term_desc %></p>
                                </section>
                            <% } %>
                        <% } else { %>
                            <div class="alert alert-warning text-center">
                                No terms and conditions content available at this time.
                            </div>
                        <% } %>

                        <section class="mb-0">
                            <h2 class="h3 mb-3 pp-section-title">Contact Information</h2>
                            <p>If you have questions about these Terms & Conditions, please contact our administration team.</p>
                        </section>

                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<!-- Call to Action Section -->
<section class="pp-cta-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h3 class="h2 mb-4">Have questions about our terms?</h3>
                <p class="mb-4">Our team is here to address any concerns you may have about our rules and regulations.</p>
                <a href="/contact" class="btn btn-primary btn-lg px-4">
                    <i class="fas fa-comments me-2"></i> Contact Us
                </a>
            </div>
        </div>
    </div>
</section>

<%- include("footer.ejs") %>