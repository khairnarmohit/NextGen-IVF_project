<%- include("navbar.ejs") %>

<link rel="stylesheet" href="/css/patient_stories.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Hero Section -->
<section class="hero-section bg-body-secondary py-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-start">
                <h1 class="p-5 display-3 fw-bold" style="color: #2bb0c0;">Patient Stories</h1>
                <p class="lead text-white-50 mb-4">Real journeys from real people. Read inspiring success stories from our patients.</p>
            </div>
        </div>
    </div>
</section>

<!-- Main Content -->
<section class="py-5 bg-light">
    <div class="container">
        
        <h2 class="text-center mb-5 fw-bold text-primary"
            style="font-family: 'Poppins', sans-serif;">
            What Our Patients Say
        </h2>

        <div class="row g-4">
            <!-- DYNAMIC STORIES LOOP -->
            <% if(stories && stories.length > 0) { %>
                <% stories.forEach(function(item){ %>
                    <div class="col-lg-4 col-md-6">
                        <div class="testimonial-card h-100">
                            <div class="quote-icon">
                                <i class="fas fa-quote-right"></i>
                            </div>
                            <p class="testimonial-text">
                                "<%= item.patients_review_desc %>"
                            </p>
                            <div class="d-flex align-items-center mt-4">
                                <img src="/uploads/<%= item.patients_review_photo %>"
                                     class="profile-img" 
                                     alt="<%= item.patients_review_name %>"
                                     onerror="this.src='https://via.placeholder.com/50'">
                                <div class="ms-3">
                                    <h6 class="mb-0 fw-bold text-primary"><%= item.patients_review_name %></h6>
                                    <!-- FIXED DATE DISPLAY SECTION -->
                                    <div class="text-muted review-date" data-date="<%= item.patients_review_date %>">
                                        <i class="fas fa-map-marker-alt me-1"></i> <%= item.patients_review_address %>
                                        <!-- Formatted date will be injected here by JS -->
                                        <span class="d-block mt-1"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <!-- Fallback if no stories in DB -->
                <div class="col-12 text-center py-5">
                    <h3 class="text-muted">No patient stories found yet.</h3>
                </div>
            <% } %>
        </div>
    </div>
</section>

<!-- Modal for Video/Photo Gallery -->
<div id="imageModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <span class="nav-btn prev">&#10094;</span>
        <img id="modalImage" class="modal-image" src="" alt="Facility Image">
        <span class="nav-btn next">&#10095;</span>
    </div>
</div>

<!-- Script to Format Date -->
<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Target all review date elements
        const dateElements = document.querySelectorAll('.review-date');
        
        // Use Intl.DateTimeFormat for professional formatting (e.g., "April 14, 2025")
        const formatter = new Intl.DateTimeFormat('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        });

        dateElements.forEach(el => {
            const rawDate = el.dataset.date;
            if (!rawDate) return;

            const date = new Date(rawDate);
            const formatted = formatter.format(date);
            
            // Inject the formatted date into the span, keeping the original text intact
            const span = el.querySelector('span');
            if(span) {
                span.textContent = formatted;
            }
        });
    });
</script>

