<style >
        /* CSS Variables */
:root {
    --primary-color: #2bb0c0;
    --primary-light: #e6f7f9;
    --secondary-color: #38b6ff;
    --accent-color: #ff7eb3;
    --dark-color: #2c3e50;
    --light-color: #f8f9fa;
    --text-dark: #333333;
    --text-light: #666666;
    --border-radius: 10px;
    --box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
    --transition: all 0.3s ease;
}

.hero-section .breadcrumb a,
.hero-section .breadcrumb .breadcrumb-item.active {
  color: #6c757d;              
  text-decoration: none;    
}

.hero-section .breadcrumb a:hover {
  color: #6c757d;             
}





/* FAQ Section */
.faq-section {
    background-color: white;
}
.faq-section h3{
    color: #5097ee;
}

.category-card {
    background-color: white;
    border-radius: var(--border-radius);
    padding: 25px;
    margin-bottom: 30px;
    box-shadow: var(--box-shadow);
    border-top: 4px solid var(--primary-color) !important;
    height: 100%;
    transition: var(--transition);
}

.category-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.12);
}

.category-title {
    font-size: 1.5rem;
    color: var(--primary-color);
    margin-bottom: 25px;
    padding-bottom: 15px;
    border-bottom: 2px solid var(--primary-light);
    display: flex;
    align-items: center;
}

.category-title i {
    background-color: var(--primary-light);
    padding: 10px;
    border-radius: 50%;
    width: 45px;
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Accordion Customization */
.accordion {
    --bs-accordion-border-color: #e9ecef;
    --bs-accordion-border-radius: var(--border-radius);
    --bs-accordion-inner-border-radius: calc(var(--border-radius) - 1px);
}

.accordion-item {
    border: none;
    border-radius: var(--border-radius) !important;
    margin-bottom: 15px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
    overflow: hidden;
    transition: var(--transition);
}

.accordion-item:hover {
    box-shadow: 0 5px 15px rgba(43, 176, 192, 0.1);
}

.accordion-button {
    background-color: var(--primary-light) !important;
    color: var(--dark-color) !important;
    font-family: 'Poppins', sans-serif;
    font-weight: 500;
    font-size: 1.1rem;
    padding: 20px !important;
    border-radius: 0 !important;
    box-shadow: none !important;
    transition: var(--transition);
}

.accordion-button:not(.collapsed) {
/*    color: var(--primary-color) !important;*/
    background-color: white !important;
    border-bottom: 1px solid #e9ecef;
}

.accordion-button:focus {
    box-shadow: none;
    border-color: transparent;
}

.accordion-button::after {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%232bb0c0'%3e%3cpath fill-rule='evenodd' d='M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z'/%3e%3c/svg%3e");
    width: 1.25rem;
    height: 1.25rem;
    background-size: 1.25rem;
    transition: var(--transition);
}

.accordion-button:not(.collapsed)::after {
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%232bb0c0'%3e%3cpath fill-rule='evenodd' d='M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z'/%3e%3c/svg%3e");
    transform: rotate(180deg);
}

.accordion-body {
    padding: 20px !important;
    font-size: 1rem;
    line-height: 1.8;
    color: var(--text-light);
}
.accordion-body strong {
    color: var(--dark-color);
}

/* Call to Action Section */
.cta-section {
    background: linear-gradient(135deg, var(--dark-color) 0%, #34495e 100%);
    color: white;
}

.cta-card {
    background-color: white;
    border-radius: var(--border-radius);
    padding: 50px 30px;
    box-shadow: var(--box-shadow);
    max-width: 800px;
    margin: 0 auto;
}

.cta-title {
    color: var(--dark-color);
    font-size: 2.2rem;
    margin-bottom: 15px;
}

.cta-subtitle {
    color: var(--text-light);
    font-size: 1.1rem;
    margin-bottom: 30px;
}

.cta-button {
    background-color: var(--primary-color) !important;
    border: none !important;
    padding: 15px 40px !important;
    border-radius: 50px !important;
    font-family: 'Poppins', sans-serif;
    font-weight: 600;
    font-size: 1.2rem;
    transition: var(--transition);
}

.cta-button:hover {
    background-color: var(--secondary-color) !important;
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(43, 176, 192, 0.3);
}

.contact-info {
    margin-top: 30px;
}

.contact-item {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    color: var(--text-light);
    font-size: 1.1rem;
}

.contact-item i {
    color: var(--primary-color);
    font-size: 1.3rem;
    background-color: var(--primary-light);
    padding: 12px;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
}
    </style>
   
    <!-- Hero Section -->
    <section class="hero-section bg-body-secondary">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="hero-title">Frequently Asked Questions</h1>  
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page" >FAQs</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>

    <!-- FAQ Section -->
  <!-- FAQ Section -->
<section class="faq-section py-5">
  <div class="container">
    <div class="row">

    <% if (faqs && faqs.length > 0) { %>

      <% let lastType = ""; let acc = 0; %>

      <% for (let i = 0; i < faqs.length; i++) { %>

        <% if (lastType !== faqs[i].faq_service) { %>

          <% if (lastType !== "") { %>
                </div>
              </div>
            </div>
          <% } %>

          <% lastType = faqs[i].faq_service; acc++; %>

          <!-- CATEGORY CARD (DESIGN SAME) -->
          <div class="col-lg-6 mb-4">
            <div class="category-card">

              <h3 class="category-title">
                <i class="fas fa-question-circle me-2"></i>
                <%= lastType %>
              </h3>

              <div class="accordion" id="accordion<%= acc %>">

        <% } %>

        <!-- QUESTION (DESIGN SAME) -->
        <div class="accordion-item">
          <h2 class="accordion-header">
            <button class="accordion-button collapsed"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#faq<%= faqs[i].faq_id %>">
              <%= faqs[i].faq_title %>
            </button>
          </h2>

          <div id="faq<%= faqs[i].faq_id %>"
               class="accordion-collapse collapse "
               data-bs-parent="#accordion<%= acc %>">
            <div class="accordion-body">
              <%= faqs[i].faq_desc %>
            </div>
          </div>
        </div>

      <% } %>

      <!-- LAST CLOSE -->
              </div>
            </div>
          </div>

    <% } else { %>

      <div class="col-12 text-center">
        <p>No FAQs available</p>
      </div>

    <% } %>

    </div>
  </div>
</section>



