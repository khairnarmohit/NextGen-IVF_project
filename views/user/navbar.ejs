    .nav-link.active::after {
  content: "";
  position: absolute;
  left: 10px;
  right: 10px;
  bottom: -6px;
  height: 3px;
  background-color: var(--primary);
  border-radius: 2px;
}

    /* ===== Appointment Button ===== */
    .btn-appointment {
      background-color: var(--primary);
      color: #fff !important;
      border-radius: 999px;
      padding: 10px 24px;
      font-weight: 600;
      border: 2px solid var(--primary);
      font-family: "Poppins", sans-serif;
      transition: all 0.3s ease;
      white-space: nowrap;
    }

    .btn-appointment:hover {
      background-color: #1565c0;
      border-color: #1565c0;
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(30, 136, 229, 0.3);
    }

    /* ===== Toggler ===== */
    .navbar-toggler {
      border: none;
      padding: 8px;
    }

    .navbar-toggler:focus {
      box-shadow: 0 0 0 2px var(--secondary);
    }

    .navbar-toggler-icon {
      /* background-image: url('/uploads/logo.png'); */
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%2830, 136, 229, 1%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }

    /* ===== Mobile Refinements ===== */
    @media (max-width: 992px) {
      .nav-link {
        margin: 6px 0;
        padding: 10px 15px !important;
      }

      .nav-link.active::after {
        left: 0;
        top: 8px;
        bottom: 8px;
        width: 4px;
        height: auto;
      }

      .btn-appointment {
        width: 100%;
        margin-top: 10px;
        text-align: center;
      }
    }
  </style>
